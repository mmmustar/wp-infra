apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: wordpress-ingress
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/ssl-redirect: "false"  # DÃ©sactivez la redirection SSL pour le moment
spec:
  ingressClassName: nginx  # Ajoutez cette ligne
  rules:
  - host: test.mmustar.fr
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: wordpress
            port:
              number: 80